# {{ansible_managed}}

[Unit]
Description=Mesos Cluster Manager Slave
After=network.target
Wants=network.target

[Service]
EnvironmentFile=-/etc/sysconfig/mesos-slave
ExecStart=/usr/local/sbin/mesos-slave
Restart=always
RestartSec=20
LimitNOFILE=16384

{# http://pkgs.fedoraproject.org/cgit/mesos.git/tree/mesos-slave #}
